# Exchange API Configuration
# Options: kraken, coinbase, kucoin, binance, bitfinex, etc.
# Recommended for testing: kraken (no geo-restrictions)
EXCHANGE_NAME=kraken
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Trading Parameters
MIN_PROFIT_THRESHOLD=0.5  # Minimum profit percentage
MAX_POSITION_SIZE=1000    # Maximum USD value per trade
SLIPPAGE_TOLERANCE=0.1    # Expected slippage percentage

# Risk Management
ENABLE_PAPER_TRADING=true
MAX_TRADES_PER_HOUR=100
STOP_LOSS_PERCENTAGE=2.0

# Monitoring
LOG_LEVEL=INFO
ENABLE_NOTIFICATIONS=false
